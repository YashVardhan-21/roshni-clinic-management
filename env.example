# Roshni Clinic Management System - Environment Configuration
# Copy this file to .env and fill in your actual values

# Supabase Configuration (REQUIRED)
VITE_SUPABASE_URL=your_supabase_project_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Payment Gateways (FREE tier accounts)
# UPI Static QR (FREE - just need UPI ID)
VITE_UPI_MERCHANT_ID=roshniclinic@upi

# Razorpay (FREE tier - 100K transactions)
VITE_RAZORPAY_KEY_ID=your_razorpay_key_id_here
VITE_RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here

# Communication Services (FREE tier accounts)
# Resend Email (3K emails/month FREE)
VITE_RESEND_API_KEY=your_resend_api_key_here

# Fast2SMS (FREE tier available)
VITE_FAST2SMS_API_KEY=your_fast2sms_api_key_here

# Application Configuration
VITE_APP_NAME=Roshni Clinic Management System
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development
VITE_DEBUG_MODE=true

# Clinic Information (Update with actual clinic details)
VITE_CLINIC_NAME=Roshni Clinic
VITE_CLINIC_PHONE=+91-9876543210
VITE_CLINIC_EMAIL=info@roshniclinic.com
VITE_CLINIC_ADDRESS=123 Main Street, City, State, PIN

# Feature Flags (Enable/disable features)
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_REAL_TIME_UPDATES=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_FILE_UPLOADS=true
VITE_ENABLE_SMS_NOTIFICATIONS=true
VITE_ENABLE_EMAIL_NOTIFICATIONS=true

# Monitoring and Analytics
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_USAGE_ANALYTICS=false
VITE_ENABLE_HEALTH_CHECKS=true

# File Upload Limits
VITE_MAX_FILE_SIZE_MB=10
VITE_ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# Appointment Configuration
VITE_DEFAULT_APPOINTMENT_DURATION=45
VITE_ADVANCE_BOOKING_DAYS=30
VITE_CANCELLATION_HOURS=24

# Security Configuration
VITE_SESSION_TIMEOUT_MINUTES=480
VITE_ENABLE_TWO_FACTOR_AUTH=false

# Development/Testing Settings (Only for development)
VITE_MOCK_PAYMENTS=true
VITE_MOCK_SMS=true
VITE_MOCK_EMAIL=true 